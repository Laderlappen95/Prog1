		int [] dice = new int[100];

		System.out.println("Vilka spelar? Använd inte mer än 6 tecken");
		namn[0] = input.next();
		namn[1] = input.next();
		namn[2] = input.next();
		namn[3] = input.next();
		namn[4] = input.next();

		int dice1[] = new int[100];
		int dice2[] = new int[100];
		int dice3[] = new int[100];
		int dice4[] = new int[100];
		int dice5[] = new int[100];

		for(int s = 0; s>=0; s++) {



			for(int i = 1; i>=0; i++) {


				dice1[i] = (int)(Math.random()*6+1);
				dice2[i]= (int)(Math.random()*6+1);
				dice3[i] = (int)(Math.random()*6+1);
				dice4[i] = (int)(Math.random()*6+1);
				dice5[i] = (int)(Math.random()*6+1);
				System.out.println("Tärning 1: " + dice1[i]);
				System.out.println("Tärning 2: " + dice1[i]);
				System.out.println("Tärning 3: " + dice1[i]);
				System.out.println("Tärning 4: " + dice1[i]);
				System.out.println("Tärning 5: " + dice1[i]);
				
				
				
				System.out.println("IGEN? 10");
				int igen = input.nextInt();
				if(igen == 10) {
					i=-3;
				}
			}




			System.out.println(dice[0] + dice[1] + " "+dice[2]);


			System.out.println("Spelare\t|" + namn[0] + "\t|" + namn[1] + "\t|" + namn[2] + "\t|" + namn[3] + "\t|" + namn[4] + "\t|");
			System.out.println("Ettor: \t|" + dice1[1] + "\t|" + dice2[1] + "\t|" + dice3[1] + "\t|" + dice4[1] + "\t|" + dice5[1] + "\t|");
